<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tuneerkhargonkar.studios.kaizen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".editkaizen"></activity>
        <activity
            android:name=".ProfileView"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
        <activity android:name=".UserRegister" />
        <activity
            android:name=".UserSignIn"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewHomeScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".SendHomeScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>